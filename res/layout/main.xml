<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evilScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <in.shick.lockpatterngenerator.LockPatternView
            android:id="@+id/patternOutputView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <Button 
            android:id="@+id/generateButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_button_label"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button 
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/settings_button_label"
                />
            <ToggleButton
                android:id="@+id/practiceToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textOn="@string/practice"
                android:textOff="@string/practice"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
